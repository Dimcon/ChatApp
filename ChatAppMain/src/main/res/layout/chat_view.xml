<?xml version="1.0" encoding="utf-8"?>
<com.gc.materialdesign.views.Card xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="350dp"
            android:id="@+id/chats_view"
        android:layout_centerHorizontal="true">

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffd2d1d4"
            android:id="@+id/relative_chat_layout"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="5dp">
                <android.support.v7.widget.RecyclerView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/chats_recycler_view">
                </android.support.v7.widget.RecyclerView>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/relative_chat_layout">
    </RelativeLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Jerry Doe"
            android:id="@+id/textView4"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"/>

</com.gc.materialdesign.views.Card>